cabal-version:      2.4
name:               example-haskell2010
version:            0.1.0.0

author:             Mizunashi Mana
maintainer:         mizunashi-mana@noreply.git

--executable haskell2010-exe
--    main-is:          Main.hs
--    hs-source-dirs:   app
--
--    default-language: Haskell2010
--
--    build-depends:
--        base,
--        example-haskell2010,
